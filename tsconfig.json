{
  "compilerOptions": {
    "jsx": "react",
    "module": "system",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outFile": "../../built/local/tsc.js",
    "sourceMap": true,
    "moduleResolution": "node",
    "noEmit": true,
    "allowImportingTsExtensions": true,
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}